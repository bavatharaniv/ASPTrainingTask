@model IEnumerable<APIRest.Model.Employeeswithskills>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WFManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lockstatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileId)
            </th>
            <th>
                Skills
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @* @Html.DisplayFor(modelItem => item.EmpName)*@
                @item.EmpName
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.Manager
            </td>
            <td>
                @item.WFManager
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Lockstatus
            </td>
            <td>
                @item.Experience
            </td>
            <td>
                @item.ProfileId
            </td>
            <td>
                <ul style="float: left;padding:3px;background-color:grey;margin-left:4px;list-style-type:none">
                    @foreach (var x in item.Skills)
                    {
                        <li>@x</li>
                    }
                </ul>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
